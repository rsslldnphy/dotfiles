# vim
alias e=vim
alias :q=exit

# git
alias gst='git status'
alias git='hub'

# docker
alias docker-init='[ "$(docker-machine status default)" == "Stopped" ] && docker-machine start default; eval $(docker-machine env default);'
alias dato='/Applications/Dato\ Launcher.app/Contents/MacOS/Electron'

alias bi='bundle install'
alias bu='bundle update'
alias be='bundle exec'
alias gitcleanup='git branch --merged | grep -v "\*" | grep -v master | grep -v dev | xargs -n 1 git branch -d'
alias gti=git
alias gpo='git push origin -u $(git rev-parse --abbrev-ref HEAD)'
